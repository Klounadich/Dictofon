<Window x:Class="Dictofon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictofon"
        mc:Ignorable="d"
        Background="Transparent"
        Title="Dictofon" Height="600" Width="400"  ResizeMode="NoResize" WindowStyle="None"
        MouseLeftButtonDown="WindowMove"
        >
    <Grid Background="#45465e">
        <Grid Width="400" Height="50" Background="#8186e6" Margin="0,0,0,550" >
            <Image x:Name="Close_Button" MouseDown="Close" Source="/close_but.png" Width="40" Margin="350,0,10,0" />
            <Grid MouseDown="Minimazed" Width="30" Height="5" Background="#321D71" Margin="315,25,55,20"></Grid>
        </Grid>
        <TextBlock FontSize="30" Foreground="White" FontWeight="Bold"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,126,0,0" >Нажмите для записи</TextBlock>
        <Ellipse Width="220" Height="220" Fill="#029dd1">

        </Ellipse>
        <Image Source="/mic.png" Width="140"></Image>
    </Grid>
    <Window.Clip >
        <RectangleGeometry Rect="0,0,400,600" RadiusX="15" RadiusY="15"></RectangleGeometry>
    </Window.Clip>
</Window>
